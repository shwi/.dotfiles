colorscheme wombat256

set transparency=10

"remove toolbar
set guioptions-=T
"do not show right-scrollbar
set guioptions-=r
set guioptions-=R
"do not show left-scrollbar
set guioptions-=l
set guioptions-=L

"set commandline height to 1
set cmdheight=1

"window size
set lines=48
set columns=160

"fonts
set guifont=Ricty:h17
set guifontwide=Ricty:h16
